{
	"compilerOptions": {
		// Enable latest features
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,
		
		// Bundler mode
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		
		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		
		// Some stricter flags (disabled by default)
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false,
		
		"baseUrl": ".",
		"paths": {
			"@this": ["src/_.ts"],
			"@this/evm": ["src/evm/_.ts"],
			"@this/evm/dispatch": ["src/evm/dispatch/_.ts"],
			"@this/evm/type-system": ["src/evm/type-system/_.ts"],
			"@this/solc": ["src/solc/_.ts"]
		}
	}
}